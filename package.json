{
  "name": "unified-public-data",
  "version": "1.0.0",
  "description": "GraphQL Gateway that federates public REST APIs with caching and query cost analysis",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "build:worker": "tsc && cp wrangler.toml dist/",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "deploy:cloudflare": "npm run build:worker && wrangler deploy",
    "deploy:vercel": "vercel --prod",
    "prepare": "npm run build"
  },
  "keywords": [
    "graphql",
    "apollo",
    "rest",
    "gateway",
    "caching",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "dataloader": "^2.2.2",
    "node-fetch": "^2.7.0",
    "graphql-depth-limit": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-fetch": "^2.6.11",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
